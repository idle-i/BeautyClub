<resources>

    <style name="Theme.DisBeauty" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">60dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>

        <item name="cornerRadius">18dp</item>

        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="BaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">48dp</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/selector_edit_text</item>
        <item name="android:textColorHint">@color/selector_edit_text</item>

        <item name="android:textSize">12sp</item>

        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>

        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>